.page_container
  .row
    .small-9.columns
      %h3= @post.title
      
  .row
    .small-9.columns
      = t(:posted_by, :poster => @post.creator.name, :when =>  l(@post.published_at, :format => :long))
  - if @post.icon?
    .row
      .small-12.columns
        - if @post.icon_width.nil?
          = image_tag @post.icon.url
        - else
          - if @post.icon_width < 800
            = image_tag @post.icon.url
          - else
            = image_tag @post.icon.url(:box)
  .row.body
    .small-9.columns
      = raw @post.body