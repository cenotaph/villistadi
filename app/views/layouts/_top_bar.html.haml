%section.top-bar-section
  %ul.left
    - Menu.roots.includes(:item).by_city(1).published.sort_by(&:sort_order).each do |menu|
      %li{:class => menu.children.empty? ? false : 'has-dropdown'}
        = link_to menu.item.name, menu.item
        - unless menu.children.empty?
          %ul.dropdown
            - menu.children.sort_by(&:sort_order).each do |child|
              %li= link_to child.item.name, child.item

  - if user_signed_in?
    %ul.right
      %li.has-dropdown
        = link_to current_user.name, '#'
        %ul.dropdown
          %li= link_to t(:sign_out), destroy_user_session_path, :method => :delete
  - else
    %ul.right
      %li.has-dropdown
        = link_to t(:sign_in), '#'
        %ul.dropdown
          %li= link_to t(:connect_with_facebook), '/auth/facebook'
          %li= link_to t(:connect_with_twitter), '/auth/twitter'
          %li= link_to t(:connect_with_google), '/auth/google_oauth2'
          %li= link_to t(:none_of_the_above), new_user_registration_path