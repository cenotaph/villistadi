.row
  .small-9.columns.small-offset-1
    %h2= t(:forgot_your_password)

    %p= t :password_reset_disclaimer
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| 
      .row
        .small-12.columns= devise_error_messages!
      .row
        .small-12.large-6.columns
          .field
            = f.label t(:enter_your_email)
            %br/
            = f.email_field :email, autofocus: true
      .row
        .small-12.columns.actions
          = f.submit t(:reset_password), class: [:button, :small, :round]
