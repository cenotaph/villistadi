.row
  .small-12.columns
    %h2 Sign in
    = semantic_form_for(resource, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f|
      %p= link_to 'Connect via Facebook', Rails.env.production? ? '/auth/facebook' : '/auth/facebook'
      %p= link_to 'Connect via Google account', '/auth/google_oauth2'
      %p= link_to 'Connect via Twitter', '/auth/twitter'

    = render "devise/shared/links"
